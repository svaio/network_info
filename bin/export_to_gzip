#!/bin/bash

set -euf -o pipefail

SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

cd "$DIR/../"

# Load environment variables from .env if it exists
if [ -f ".env" ]; then
  set -a
  . ".env"
  set +a
fi

docker compose run --rm -e PGPASSWORD="${POSTGRES_PASSWORD:?POSTGRES_PASSWORD must be set}" --name dumper --entrypoint=psql db -h db -U "${POSTGRES_USER:-network_info}" -e -q -x -c "copy block TO stdout  DELIMITER ';' CSV HEADER ;" "${POSTGRES_DB:-network_info}" | gzip > ./block_dump_`date +"%Y-%m-%d"`.csv.gz
